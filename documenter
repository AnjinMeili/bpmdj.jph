include defines

documentation: doxy invert
	@echo " [doxy]"
	@doxygen doxy
	@echo "  [css]"
	@cp documentation/*.css documentation/doxy/
	@./invert documentation/doxy/*.png

doxy: Doxyfile
	@sed 's/VERSIONNUMBER/'$(VERSION)'/' $< >$@

invert: invert.o
	@echo " [link] "$@
	@$(LINK) invert.o -o invert

%.o: %.cpp
	@echo "  [cpp] "$@
	$(CPP) -c $< $(CFLAGS) -o $@ $(QT_INCLUDE_PATH)

%.cpp: %.c++ header.txt ++2--
	@echo "  [c++] "$@
	@"++2--" $< $@
