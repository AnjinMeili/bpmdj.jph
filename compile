	wavelet-analyzer.logic.o md5-analyzer.o energy-analyzer.o \
	bpmcounter.o bpmcounter.moc.o 
analyzers.a: $(ANALYZERS)
	@echo "   [ar] analyzers.a"
	@$(AR) r $@ $(ANALYZERS) 2>.ignore

